            <input type="text" class="textio" placeholder="Name" name="name" required>
            <input type="email" class="textio" placeholder="Email" name="email" required>
            <input type="tel" class="textio" placeholder="Phone Number" pattern="[0-9]{10}" name="phone" required>
            <textarea class="textareaio" name="message">Message</textarea>
            <p class="privacy">Your details will not be shared with any third party. <a href="#">Privacy Policy</a></p>
            <input class="button" type="submit" value="Submit">
        </form>
    </section>
</section>

